<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.SignupActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/action_context_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Signup"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />

    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white_50"
        android:background="@color/white_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_user"
        app:layout_constraintTop_toBottomOf="@id/action_context_bar"
        android:layout_margin="15dp"
        android:hint="Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/su"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white_50"
        android:background="@color/white_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_password"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:layout_margin="15dp"
        android:hint="Password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/su"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white_50"
        android:background="@color/white_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_menu_gallery"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_margin="15dp"
        android:hint="Email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/su"
            android:inputType="textEmailAddress"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/board"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white_50"
        android:background="@color/white_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_menu_slideshow"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_margin="15dp"
        android:hint="Board">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/su"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item_uom"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="15dp"
        android:background="@color/white_50"
        android:hint="Item UNO"
        android:minWidth="162dp"
        app:layout_constraintTop_toBottomOf="@+id/board">

        <AutoCompleteTextView
            android:id="@+id/ed_item_uno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/sub"
        android:textColor="@color/white_50"
        android:backgroundTint="@color/purple_600"
        android:padding="10dp"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:text="Signup"
        app:layout_constraintTop_toBottomOf="@+id/item_uom"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sin_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Have Account ?"
        android:padding="5dp"
        android:fontFamily="@font/su"
        android:layout_margin="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        />
</androidx.constraintlayout.widget.ConstraintLayout>